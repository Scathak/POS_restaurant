<Window x:Class="POS_restaurant.MainOperations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS_restaurant"
        mc:Ignorable="d"
        Title="MainOperations" WindowState="Maximized" WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Date and Time on Top -->
        <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Text="{Binding CurrentDateTime}"/>

        <!-- Left: DataGrid with Operations -->
        <DataGrid Grid.Column="0" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Operation No."/>
                <DataGridTextColumn Header="Name"/>
                <DataGridTextColumn Header="Price"/>
                <DataGridTextColumn Header="Quantity"/>
                <DataGridTextColumn Header="Total"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Center: Numeric Keypad and Buttons -->
        <StackPanel Grid.Column="1">
            <UniformGrid Rows="4" Columns="3">
                <Button Content="1" FontSize="24"/>
                <Button Content="2" FontSize="24"/>
                <Button Content="3" FontSize="24"/>
                <Button Content="4" FontSize="24"/>
                <Button Content="5" FontSize="24"/>
                <Button Content="6" FontSize="24"/>
                <Button Content="7" FontSize="24"/>
                <Button Content="8" FontSize="24"/>
                <Button Content="9" FontSize="24"/>
                <Button Content="Clear" FontSize="20"/>
                <Button Content="0" FontSize="24"/>
                <Button Content="Enter" FontSize="24"/>
                <!-- More buttons -->
            </UniformGrid>
            <UniformGrid>
                <Button Content="Add"/>
                <Button Content="Delete"/>
            </UniformGrid>
            <!-- More action buttons -->
        </StackPanel>

        <!-- Right: Category and Items -->
        <StackPanel Grid.Column="2">
            <UniformGrid>
                <Button Content="Breakfast"/>
                <Button Content="Main"/>
                <Button Content="Desserts"/>
                <Button Content="Drinks"/>

            </UniformGrid>
            <!-- More categories -->
        </StackPanel>
    </Grid>
</Window>
