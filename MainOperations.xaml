<Window x:Class="POS_restaurant.MainOperations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS_restaurant"
        mc:Ignorable="d"
        Title="MainOperations" WindowState="Maximized" WindowStyle="None">
    <Grid>
        
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <local:UserControl1 x:Name="MainHeader" VerticalAlignment="Top"  Grid.Row="0" Grid.ColumnSpan="4"/>
        <local:UserControl2 x:Name="MainMenu" HorizontalAlignment="Right"  Grid.Row="1" Grid.Column="3"/>
        <!-- Date and Time on Top 
        <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Text="{Binding CurrentDateTime}"/> -->
        <GridSplitter Grid.Column="0" Grid.Row="1" Width="5" HorizontalAlignment="Stretch"/>
        <UniformGrid Grid.Column="0" Grid.Row="1">
            <!-- Left: DataGrid with Operations -->
            <DataGrid Grid.Column="0" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Operation No."/>
                    <DataGridTextColumn Header="Name"/>
                    <DataGridTextColumn Header="Price"/>
                    <DataGridTextColumn Header="Quantity"/>
                    <DataGridTextColumn Header="Total"/>
                </DataGrid.Columns>
            </DataGrid>

            <Grid Grid.Column="0" Grid.Row="1">
                <!-- Left-side panel with buttons for shapes -->
                <StackPanel Width="150" HorizontalAlignment="Left" VerticalAlignment="Stretch" Background="#f0f0f0">
                    <Button x:Name="CircleButton" Content="Additional" Width="auto" Height="30" FontSize="20" Margin="10" Background="LightBlue" AllowDrop="False" />
                    <Button x:Name="SquareButton" Content="Table" Width="auto" Height="30" FontSize="20" Margin="10" Background="LightGreen" AllowDrop="False" />
                    <Button x:Name="TriangleButton" Content="Cassier" Width="auto" Height="30" FontSize="20" Margin="10" Background="LightCoral" AllowDrop="False" />
                </StackPanel>

                <!-- Main drawing panel -->
                <Canvas x:Name="DrawingCanvas" Background="LightGray" AllowDrop="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="150,0,0,0">
                    <!-- Elements will be dropped here -->
                </Canvas>
            </Grid>
        </UniformGrid>
        <!-- Center: Numeric Keypad and Buttons -->
        <StackPanel Grid.Column="1" Grid.Row="1">
            <UniformGrid Rows="4" Columns="3">
                <Button  Height="80" Content="1" FontSize="24"/>
                <Button Content="2" FontSize="24"/>
                <Button Content="3" FontSize="24"/>
                <Button Content="4" FontSize="24"/>
                <Button Content="5" FontSize="24"/>
                <Button Content="6" FontSize="24"/>
                <Button Content="7" FontSize="24"/>
                <Button Content="8" FontSize="24"/>
                <Button Content="9" FontSize="24"/>
                <Button Content="Clear" FontSize="20"/>
                <Button Content="0" FontSize="24"/>
                <Button Content="Enter" FontSize="24"/>
                <!-- More buttons -->
            </UniformGrid>
            <UniformGrid>
                <Button Content="Add"/>
                <Button Content="Delete"/>
            </UniformGrid>
            <!-- More action buttons -->
        </StackPanel>

        <!-- Right: Category and Items -->
        <StackPanel Grid.Column="2" Grid.Row="1">
            <UniformGrid>
                <Button Content="Breakfast"/>
                <Button Content="Main"/>
                <Button Content="Desserts"/>
                <Button Content="Drinks"/>
            </UniformGrid>
            <!-- More categories -->
        </StackPanel>
    </Grid>
</Window>
