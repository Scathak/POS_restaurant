<UserControl x:Class="POS_restaurant.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS_restaurant"
             mc:Ignorable="d" 
             Height="40" HorizontalAlignment="Stretch" VerticalAlignment="Top">
    <Grid Background="#f0f0f0">
        <!-- Active Window Name -->
        <TextBlock x:Name="WindowNameTextBlock" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="10" />
        <!-- Date and Time -->
        <TextBlock x:Name="DateTimeTextBlock" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10" />
    </Grid>
</UserControl>
